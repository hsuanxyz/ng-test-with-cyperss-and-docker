{
  "name": "ng-test-with-cyperss-and-docker",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "test": "npm run docker:build && npm run docker:run",
    "test:baseline": "npm run docker:build && npm run docker:cypress:baseline",
    "docker:build": "docker-compose up -d --build",
    "docker:run": "docker-compose run cypress ./node_modules/.bin/cypress run --config baseUrl=http://127.0.0.1 ",
